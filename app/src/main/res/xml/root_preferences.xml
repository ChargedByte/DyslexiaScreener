<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/screening_header">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="toggle_timer"
            app:summary="@string/toggle_timer_description"
            app:title="@string/toggle_timer_header" />
        <ListPreference
            app:defaultValue="12"
            app:dependency="toggle_timer"
            app:key="select_time"
            app:title="@string/select_time_header" />
        <ListPreference
            app:defaultValue="12"
            app:key="select_question_count"
            app:title="@string/select_question_count_header" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/user_interface_header">
        <ListPreference
            app:entries="@array/supportedLanguages"
            app:entryValues="@array/supportedLanguageCodes"
            app:key="select_language"
            app:title="@string/select_language_header" />
    </PreferenceCategory>

</PreferenceScreen>
